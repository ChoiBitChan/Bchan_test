<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="userInfo">

	<select id="getInfo" parameterType="String" resultType="test.dto.C_CustomerDTO">
		select * from customer where userid = #{userid}
	</select>
	
	<update id="modifyInfo" parameterType="test.dto.C_CustomerDTO">
		update customer set name = #{name}, password = #{password}, mobile = #{mobile}, email = #{email} where userid = #{userid}
	</update>

</mapper>